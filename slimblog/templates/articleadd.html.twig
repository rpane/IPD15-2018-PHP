{% block title %}Login{% endblock %}
{% block content %}
{% if errorList %}
    <ul class="error">
        {% for error in errorList %}
            <li>{{error}}</li>
            {% endfor %}
    </ul>
{% endif %}

<form method="post">
    Title: <input type="text" name="title"><br>
    <textarea name="body"></textarea><br>
    <input type="submit" value="Publish Article">
</form> 
{% endblock %}
